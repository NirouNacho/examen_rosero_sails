<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormularioPokemonActivity">

    <TextView
            android:text="Numero Pokemon"
            android:layout_width="136dp"
            android:layout_height="21dp"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/image_view_codigo_de_barras"/>
    <TextView
            android:text="Nombre:"
            android:layout_width="69dp"
            android:layout_height="21dp"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="Poder Especial 1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:text="Poder Especial 2"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/textView8"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"/>
    <TextView
            android:text="Fecha Captura:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:text="Nivel Pokemon:"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_numeroPokemon"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/image_view_codigo_de_barras"/>
    <EditText
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_nombre_pokemon"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_numeroPokemon"
            app:layout_constraintHorizontal_bias="0.561"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText_poder_uno"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.573" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_nombre_pokemon"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_poder_dos"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_poder_uno"/>
    <EditText
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText_fechac_pokemon"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_poder_dos" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView9"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.479"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_nivel_pokemon"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_fechac_pokemon" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView10"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_guardarm"
            app:layout_constraintStart_toEndOf="@+id/button_foto"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText_nivel_pokemon"/>
    <Button
            android:text="Foto"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/button_foto"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_nivel_pokemon"/>
    <ImageView
            android:layout_width="157dp"
            android:layout_height="150dp" app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal"
            android:id="@+id/image_view_codigo_de_barras"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>